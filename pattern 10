// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
   for(int i=0;i<5;i++){
       for(int j=0;j<5-i-1;j++){
           cout<<"-";
       }
       cout<<"*";
       for(int j=5-i;j<(5+i-1);j++){
           cout<<" ";
       }
       if(i!=0){
       cout<<"*";}
       cout<<endl;
   }

   for(int i=3;i>=0;i--){
       for(int j=0;j<5-i-1;j++){
           cout<<"-";
       }
       cout<<"*";
        for(int j=5-i;j<(5+i-1);j++){
           cout<<" ";
       }
        if(i!=0){
       cout<<"*";}
       cout<<endl;
   }
    return 0;
}
